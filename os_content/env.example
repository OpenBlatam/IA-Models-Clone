# OS Content System Environment Configuration
# Copy this file to .env and modify the values as needed

# Application Configuration
ENVIRONMENT=development
APP_NAME="OS Content System"
APP_VERSION=1.0.0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true
API_WORKERS=1
API_RELOAD=true
API_CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password
DB_NAME=os_content
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=10

# Security Configuration
SECRET_KEY=your-super-secret-key-must-be-at-least-32-characters-long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Monitoring Configuration
PROMETHEUS_ENABLED=true
SENTRY_DSN=
LOG_LEVEL=INFO
LOG_FORMAT=json
METRICS_PORT=9090

# Machine Learning Configuration
MODEL_CACHE_DIR=./models
GPU_ENABLED=false
BATCH_SIZE=32
MAX_WORKERS=4
MODEL_TIMEOUT=300

# Cache Configuration
L1_CACHE_SIZE=1000
L2_CACHE_TTL=3600
L3_CACHE_TTL=86400
COMPRESSION_ENABLED=true
COMPRESSION_ALGORITHM=zstandard

# External Services (Optional)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_TLS=true

# Slack/Discord Integration (Optional)
SLACK_BOT_TOKEN=
SLACK_CHANNEL_ID=
DISCORD_BOT_TOKEN=
DISCORD_CHANNEL_ID=

# Monitoring and Analytics (Optional)
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=
AMPLITUDE_API_KEY=

# Development Tools
PYTHONPATH=.
PYTHONUNBUFFERED=1 