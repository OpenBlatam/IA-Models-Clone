# Blatam Academy Features - Production Environment Template
# Copiar este archivo a .env y ajustar los valores

# ============================================
# Configuraci√≥n Principal
# ============================================
APP_NAME=Blatam Academy Production
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# ============================================
# Servidor
# ============================================
HOST=0.0.0.0
PORT=8000

# ============================================
# Seguridad
# ============================================
SECRET_KEY=CHANGE-THIS-TO-A-SECURE-RANDOM-STRING
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# ============================================
# Base de Datos
# ============================================
DATABASE_URL=postgresql://postgres:CHANGE_PASSWORD@postgres:5432/blatam_academy
DATABASE_ECHO=false
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# ============================================
# Redis
# ============================================
REDIS_URL=redis://redis:6379
REDIS_ENABLED=true
REDIS_TTL=3600

# ============================================
# Endpoints de Servicios
# ============================================
INTEGRATION_SYSTEM_ENDPOINT=http://integration-system:8000
CONTENT_REDUNDANCY_ENDPOINT=http://content-redundancy:8001
BUL_ENDPOINT=http://bul:8002
GAMMA_APP_ENDPOINT=http://gamma-app:8003
BUSINESS_AGENTS_ENDPOINT=http://business-agents:8004
EXPORT_IA_ENDPOINT=http://export-ia:8005

# ============================================
# API Keys (Configurar con valores reales)
# ============================================
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
OPENROUTER_API_KEY=sk-or-v1-...
HUGGINGFACE_API_KEY=hf_...

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# ============================================
# KV Cache Configuration
# ============================================
KV_CACHE_ENABLED=true
KV_CACHE_MAX_TOKENS=16384
KV_CACHE_STRATEGY=adaptive
KV_CACHE_COMPRESSION=true
KV_CACHE_COMPRESSION_RATIO=0.3
KV_CACHE_ENABLE_PERSISTENCE=true
KV_CACHE_PERSISTENCE_PATH=/data/cache

# ============================================
# Monitoring
# ============================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000

# ============================================
# File Upload
# ============================================
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=pdf,docx,doc,txt,md,html

# ============================================
# CORS
# ============================================
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true

# ============================================
# Email (Opcional)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@blatam.academy

# ============================================
# Backup
# ============================================
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=30

