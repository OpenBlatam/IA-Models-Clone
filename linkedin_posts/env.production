# Variables de Entorno - LinkedIn Posts Production
# ================================================

# Configuración de la Aplicación
APP_NAME=LinkedIn Posts Ultra Fast API
APP_VERSION=2.0.0
APP_ENV=production
DEBUG=false
LOG_LEVEL=INFO

# Configuración de Base de Datos
DATABASE_URL=postgresql+asyncpg://user:pass@db/linkedin_posts
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Configuración de Redis
REDIS_URL=redis://redis:6379/0
REDIS_POOL_SIZE=10
REDIS_MAX_CONNECTIONS=20
REDIS_RETRY_ON_TIMEOUT=true
REDIS_HEALTH_CHECK_INTERVAL=30

# Configuración de Performance
WORKER_PROCESSES=4
WORKER_THREADS=50
MAX_CONCURRENT_REQUESTS=1000
REQUEST_TIMEOUT=30
RESPONSE_TIMEOUT=60

# Configuración de Cache
CACHE_TTL=3600
CACHE_MAX_SIZE=10000
CACHE_ENABLE_COMPRESSION=true
CACHE_REDIS_DB=0

# Configuración de NLP
NLP_MODEL_NAME=en_core_web_sm
TRANSFORMERS_MODEL=sentence-transformers/all-MiniLM-L6-v2
SENTIMENT_MODEL=cardiffnlp/twitter-roberta-base-sentiment
NLP_CACHE_ENABLED=true
NLP_BATCH_SIZE=10

# Configuración de Monitoreo
ENABLE_PROFILING=true
ENABLE_METRICS=true
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
ELASTICSEARCH_URL=http://elasticsearch:9200
KIBANA_URL=http://kibana:5601

# Configuración de Logging
LOG_FORMAT=json
LOG_FILE=/app/logs/app.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5
LOG_COMPRESS=true

# Configuración de Seguridad
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
CORS_ORIGINS=["*"]
TRUSTED_HOSTS=["*"]

# Configuración de Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_BURST=200

# Configuración de API Keys (para servicios externos)
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
COHERE_API_KEY=your-cohere-api-key

# Configuración de Social Media APIs
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_REDIRECT_URI=http://localhost:8000/auth/linkedin/callback

# Configuración de Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@linkedinposts.com

# Configuración de Storage
STORAGE_TYPE=local
STORAGE_PATH=/app/storage
S3_BUCKET=linkedin-posts-storage
S3_ACCESS_KEY=your-s3-access-key
S3_SECRET_KEY=your-s3-secret-key
S3_REGION=us-east-1

# Configuración de Background Tasks
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true

# Configuración de Health Checks
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Configuración de Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=/app/backups

# Configuración de SSL/TLS
SSL_ENABLED=false
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Configuración de Load Balancer
LOAD_BALANCER_ENABLED=true
LOAD_BALANCER_ALGORITHM=round_robin
LOAD_BALANCER_HEALTH_CHECK_PATH=/health
LOAD_BALANCER_HEALTH_CHECK_INTERVAL=10

# Configuración de Auto-scaling
AUTO_SCALE_ENABLED=true
AUTO_SCALE_MIN_INSTANCES=2
AUTO_SCALE_MAX_INSTANCES=10
AUTO_SCALE_CPU_THRESHOLD=70
AUTO_SCALE_MEMORY_THRESHOLD=80

# Configuración de Feature Flags
FEATURE_NLP_ENHANCEMENT=true
FEATURE_BATCH_PROCESSING=true
FEATURE_REAL_TIME_ANALYTICS=true
FEATURE_AUTO_OPTIMIZATION=true
FEATURE_SOCIAL_MEDIA_INTEGRATION=false

# Configuración de Testing
TEST_MODE=false
TEST_DATABASE_URL=postgresql+asyncpg://test_user:test_pass@test_db/test_linkedin_posts
MOCK_EXTERNAL_APIS=false

# Configuración de Development
DEV_MODE=false
HOT_RELOAD=false
DEBUG_TOOLBAR=false
PROFILING_ENABLED=false 