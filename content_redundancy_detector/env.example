# Configuración de la aplicación
APP_NAME="Advanced Content Redundancy Detector"
APP_VERSION="2.0.0"
DEBUG=false
ENVIRONMENT=development

# Configuración del servidor
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Configuración de análisis
DEFAULT_SIMILARITY_THRESHOLD=0.8
MAX_CONTENT_LENGTH=50000
MIN_CONTENT_LENGTH=10
MAX_BATCH_SIZE=100

# Configuración de AI/ML
MODEL_CACHE_SIZE=10
ENABLE_GPU=false
MODEL_TIMEOUT=30
EMBEDDING_MODEL=all-MiniLM-L6-v2
LANGUAGE_MODEL=distilbert-base-uncased

# Configuración de base de datos
DATABASE_URL=
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600
MAX_CACHE_SIZE=1000

# Configuración de seguridad
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256
CORS_ORIGINS=["*"]

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_BURST=20

# Configuración de monitoreo
LOG_LEVEL=INFO
ENABLE_METRICS=true
METRICS_PORT=9090
SENTRY_DSN=

# Configuración de performance
REQUEST_TIMEOUT=30
MAX_CONCURRENT_REQUESTS=100
ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=6

# Feature Flags
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_TOPIC_MODELING=true
ENABLE_SEMANTIC_ANALYSIS=true
ENABLE_LANGUAGE_DETECTION=true
ENABLE_PLAGIARISM_DETECTION=true
ENABLE_QUALITY_SCORING=true

# Procesamiento por lotes
ENABLE_BATCH_PROCESSING=true
BATCH_QUEUE_SIZE=1000
BATCH_PROCESSING_INTERVAL=5

# Configuración de exportación
ENABLE_EXPORT=true
EXPORT_FORMATS=["json", "csv", "xlsx", "pdf"]
MAX_EXPORT_SIZE=10000