# Document Workflow Chain v3.0 - Environment Configuration
# Copy this file to .env and update the values

# Application
APP_NAME="Document Workflow Chain v3.0"
APP_VERSION="3.0.0"
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Database
DATABASE_TYPE=postgresql
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=workflow_chain
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=password
DATABASE_POOL_SIZE=10
DATABASE_ECHO=false

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# AI Services
AI_PROVIDER=openai
AI_API_KEY=your-openai-api-key
AI_MODEL=gpt-4
AI_MAX_TOKENS=4000
AI_TEMPERATURE=0.7

# Security
SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30

# Cache
CACHE_BACKEND=memory
CACHE_DEFAULT_TTL=300
CACHE_MAX_SIZE=1000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Monitoring
MONITORING_ENABLED=true
LOG_LEVEL=INFO
LOG_FORMAT=json

# Notifications
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_SLACK_ENABLED=false
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SLACK_WEBHOOK_URL=

# Analytics
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=90

# Audit
AUDIT_ENABLED=true
AUDIT_RETENTION_DAYS=365

# External Services
WEBHOOK_URL=
WEBHOOK_SECRET=
DISCORD_WEBHOOK_URL=
TEAMS_WEBHOOK_URL=