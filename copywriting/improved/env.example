# Environment Configuration
ENVIRONMENT=development

# Database Configuration
DB_URL=sqlite+aiosqlite:///./copywriting.db
# For PostgreSQL: postgresql+asyncpg://user:password@localhost:5432/copywriting
# For MySQL: mysql+aiomysql://user:password@localhost:3306/copywriting
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=10
REDIS_SOCKET_TIMEOUT=5
REDIS_SOCKET_CONNECT_TIMEOUT=5

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=true
API_DEBUG=false

# CORS Configuration
API_CORS_ORIGINS=["*"]
API_CORS_METHODS=["*"]
API_CORS_HEADERS=["*"]

# Rate Limiting
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW=60

# Security Configuration
SECURITY_SECRET_KEY=your-secret-key-here-must-be-at-least-32-characters
SECURITY_ALGORITHM=HS256
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=30
SECURITY_REFRESH_TOKEN_EXPIRE_DAYS=7
SECURITY_API_KEY_HEADER=X-API-Key
SECURITY_API_KEYS=key1,key2,key3

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_PATH=logs/copywriting.log
LOG_MAX_FILE_SIZE=10485760
LOG_BACKUP_COUNT=5

# Cache Configuration
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=300
CACHE_MAX_SIZE=1000
CACHE_COPYWRITING_TTL=600
CACHE_FEEDBACK_TTL=1800

# Monitoring Configuration
MONITORING_ENABLED=true
MONITORING_METRICS_ENDPOINT=/metrics
MONITORING_HEALTH_ENDPOINT=/health
MONITORING_PROMETHEUS_ENABLED=true
MONITORING_PROMETHEUS_PORT=9090
MONITORING_TRACK_RESPONSE_TIMES=true
MONITORING_TRACK_MEMORY_USAGE=true
MONITORING_TRACK_CPU_USAGE=true

# Application Version
VERSION=2.0.0






























