# AI Integration System Environment Configuration Template
# Copy this file to .env and update with your actual values

# Environment
ENVIRONMENT=development
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/ai_integration

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/ai_integration.log

# Salesforce Configuration
SALESFORCE__ENABLED=false
SALESFORCE__BASE_URL=https://your-instance.salesforce.com
SALESFORCE__CLIENT_ID=your_client_id
SALESFORCE__CLIENT_SECRET=your_client_secret
SALESFORCE__USERNAME=your_username
SALESFORCE__PASSWORD=your_password
SALESFORCE__SECURITY_TOKEN=your_security_token
SALESFORCE__SANDBOX=false

# Mailchimp Configuration
MAILCHIMP__ENABLED=false
MAILCHIMP__API_KEY=your_api_key
MAILCHIMP__SERVER_PREFIX=us1
MAILCHIMP__LIST_ID=your_list_id
MAILCHIMP__AUDIENCE_ID=your_audience_id

# WordPress Configuration
WORDPRESS__ENABLED=false
WORDPRESS__BASE_URL=https://your-site.com
WORDPRESS__USERNAME=your_username
WORDPRESS__PASSWORD=your_password
WORDPRESS__APPLICATION_PASSWORD=your_app_password

# HubSpot Configuration
HUBSPOT__ENABLED=false
HUBSPOT__API_KEY=your_api_key
HUBSPOT__ACCESS_TOKEN=your_access_token
HUBSPOT__PORTAL_ID=your_portal_id

# Slack Configuration
SLACK__ENABLED=false
SLACK__BOT_TOKEN=xoxb-your-bot-token
SLACK__APP_TOKEN=xapp-your-app-token
SLACK__SIGNING_SECRET=your_signing_secret

# Google Workspace Configuration
GOOGLE__ENABLED=false
GOOGLE__CREDENTIALS_FILE=path/to/credentials.json
GOOGLE__SCOPES=https://www.googleapis.com/auth/drive,https://www.googleapis.com/auth/documents

# Microsoft 365 Configuration
MICROSOFT__ENABLED=false
MICROSOFT__CLIENT_ID=your_client_id
MICROSOFT__CLIENT_SECRET=your_client_secret
MICROSOFT__TENANT_ID=your_tenant_id

# AI Services Configuration
AI__OPENAI_API_KEY=your_openai_api_key
AI__ANTHROPIC_API_KEY=your_anthropic_api_key
AI__DEFAULT_MODEL=gpt-3.5-turbo
AI__MAX_TOKENS=2000
AI__TEMPERATURE=0.7

# Integration System Configuration
INTEGRATION__MAX_RETRIES=3
INTEGRATION__RETRY_DELAY=5
INTEGRATION__BATCH_SIZE=10
INTEGRATION__QUEUE_TIMEOUT=300
INTEGRATION__WEBHOOK_TIMEOUT=30

# Monitoring Configuration
MONITORING__PROMETHEUS_ENABLED=true
MONITORING__SENTRY_DSN=your_sentry_dsn
MONITORING__HEALTH_CHECK_INTERVAL=60



























