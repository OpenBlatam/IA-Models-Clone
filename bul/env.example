# BUL System Environment Configuration
# ===================================

# Environment
ENVIRONMENT=development
DEBUG=false

# API Keys (Required)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Security
SECURITY__SECRET_KEY=your_secret_key_at_least_32_characters_long
SECURITY__ALGORITHM=HS256
SECURITY__ACCESS_TOKEN_EXPIRE_MINUTES=30
SECURITY__REFRESH_TOKEN_EXPIRE_DAYS=7
SECURITY__PASSWORD_MIN_LENGTH=8
SECURITY__RATE_LIMIT_REQUESTS=100
SECURITY__RATE_LIMIT_WINDOW=60

# Server Configuration
SERVER__HOST=0.0.0.0
SERVER__PORT=8000
SERVER__WORKERS=1
SERVER__RELOAD=false
SERVER__LOG_LEVEL=INFO
SERVER__CORS_ORIGINS=*

# Database Configuration
DATABASE__URL=sqlite:///bul.db
DATABASE__ECHO=false
DATABASE__POOL_SIZE=5
DATABASE__MAX_OVERFLOW=10
DATABASE__POOL_TIMEOUT=30
DATABASE__POOL_RECYCLE=3600

# Cache Configuration
CACHE__ENABLED=true
CACHE__BACKEND=memory
CACHE__REDIS_URL=redis://localhost:6379/0
CACHE__DEFAULT_TTL=3600
CACHE__MAX_SIZE=1000

# Logging Configuration
LOGGING__LEVEL=INFO
LOGGING__FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOGGING__FILE_PATH=logs/bul.log
LOGGING__MAX_FILE_SIZE=10485760
LOGGING__BACKUP_COUNT=5
LOGGING__JSON_LOGS=false

# API Configuration
API__OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
API__OPENAI_BASE_URL=https://api.openai.com/v1
API__DEFAULT_MODEL=openai/gpt-4
API__FALLBACK_MODEL=openai/gpt-3.5-turbo
API__MAX_TOKENS=4000
API__TEMPERATURE=0.7
API__TIMEOUT=30
API__MAX_RETRIES=3

# Business Logic Configuration
MAX_DOCUMENTS_PER_BATCH=10
MAX_DOCUMENT_LENGTH=50000
DEFAULT_LANGUAGE=es
SUPPORTED_LANGUAGES=es,en,pt,fr
AGENT_AUTO_SELECTION=true
AGENT_FALLBACK_ENABLED=true
MAX_AGENT_RETRIES=3
DEFAULT_FORMAT=markdown
SUPPORTED_FORMATS=markdown,html,pdf,docx
QUALITY_THRESHOLD=0.7
MAX_PROCESSING_TIME=300

# Performance Configuration
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=1800

# Production Database (PostgreSQL)
# DATABASE__URL=postgresql://username:password@localhost:5432/bul_db

# Production Cache (Redis)
# CACHE__BACKEND=redis
# CACHE__REDIS_URL=redis://localhost:6379/0

# Production Logging
# LOGGING__JSON_LOGS=true
# LOGGING__FILE_PATH=/var/log/bul/bul.log




