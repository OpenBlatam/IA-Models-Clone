# =============================================================================
# Video-OpusClip API Environment Configuration
# =============================================================================

# Application Configuration
APP_NAME=video-opusclip-api
APP_VERSION=2.0.0
APP_DESCRIPTION=Enhanced Video-OpusClip API with FastAPI best practices
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=true

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=["*"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET", "POST"]
CORS_ALLOW_HEADERS=["*"]

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/video_api
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600
DATABASE_ECHO=false
DATABASE_ECHO_POOL=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_SSL=false
REDIS_POOL_SIZE=20
REDIS_POOL_TIMEOUT=30
REDIS_POOL_RETRY_ON_TIMEOUT=true
REDIS_SOCKET_KEEPALIVE=true

# Cache Configuration
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=3600
CACHE_MAX_SIZE=1000
CACHE_ENABLE_FALLBACK=true
CACHE_FALLBACK_MAX_SIZE=100
CACHE_KEY_PREFIX=video_api:
CACHE_KEY_SEPARATOR=:
CACHE_COMPRESS=true
CACHE_SERIALIZER=json

# Monitoring Configuration
ENABLE_PERFORMANCE_MONITORING=true
PERFORMANCE_METRICS_INTERVAL=60
PERFORMANCE_METRICS_RETENTION=7
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9090
PROMETHEUS_ENDPOINT=/metrics
ENABLE_STRUCTURED_LOGGING=true
LOG_REQUEST_ID=true
LOG_RESPONSE_TIME=true

# Video Processor Configuration
MAX_WORKERS=8
TIMEOUT=300.0
RETRY_ATTEMPTS=3
RETRY_DELAY=1.0
DEFAULT_QUALITY=high
SUPPORTED_QUALITIES=["low", "medium", "high", "ultra"]
DEFAULT_FORMAT=mp4
SUPPORTED_FORMATS=["mp4", "avi", "mov", "mkv"]
MAX_FILE_SIZE_MB=500
MAX_DURATION_SECONDS=600
MEMORY_LIMIT_MB=1024

# Viral Processor Configuration
MAX_VARIANTS=10
MIN_VIRAL_SCORE=0.3
SUPPORTED_PLATFORMS=["youtube", "tiktok", "instagram", "twitter", "linkedin"]
ENABLE_LANGCHAIN=true
LANGCHAIN_TIMEOUT=300.0
ENABLE_SCREEN_DIVISION=true
ENABLE_TRANSITIONS=true
ENABLE_EFFECTS=true
ENABLE_ANIMATIONS=true

# LangChain Configuration
MODEL_NAME=gpt-4
MODEL_TEMPERATURE=0.7
MODEL_MAX_TOKENS=2000
ENABLE_CONTENT_ANALYSIS=true
ENABLE_ENGAGEMENT_ANALYSIS=true
ENABLE_VIRAL_ANALYSIS=true
ENABLE_TITLE_OPTIMIZATION=true
ENABLE_CAPTION_OPTIMIZATION=true
ENABLE_TIMING_OPTIMIZATION=true
BATCH_SIZE=5
MAX_RETRIES=3
USE_AGENTS=true
USE_MEMORY=true
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Batch Processor Configuration
BATCH_SIZE=10
ENABLE_PARALLEL_PROCESSING=true
ENABLE_PROGRESS_TRACKING=true
PROGRESS_REPORTING_INTERVAL=5.0
CPU_LIMIT_PERCENT=80

# Security Configuration
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
ENABLE_INPUT_VALIDATION=true
MAX_URL_LENGTH=500
MAX_TITLE_LENGTH=200
MAX_DESCRIPTION_LENGTH=1000
ENABLE_SECURITY_HEADERS=true
CONTENT_SECURITY_POLICY=default-src 'self'
ENABLE_AUTHENTICATION=true
TOKEN_EXPIRATION_HOURS=24
ENABLE_MALWARE_DETECTION=true
MALWARE_SCAN_TIMEOUT=30






























