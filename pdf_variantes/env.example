# PDF Variantes API Environment Configuration
# Copy this file to .env and configure your settings

# Application Settings
APP_NAME=PDF Variantes API
APP_VERSION=2.0.0
DEBUG=false
ENVIRONMENT=production

# API Configuration
API_V1_STR=/api/v1
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/pdf_variantes
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# File Storage
UPLOAD_PATH=uploads
VARIANTS_PATH=variants
EXPORT_PATH=exports
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_TYPES=pdf

# AI Services
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key

# AI Models
DEFAULT_AI_MODEL=gpt-3.5-turbo
TOPIC_EXTRACTION_MODEL=distilbert-base-uncased
SENTIMENT_MODEL=cardiffnlp/twitter-roberta-base-sentiment-latest
TEXT_GENERATION_MODEL=gpt-2

# Processing Limits
MAX_VARIANTS_PER_REQUEST=1000
MAX_TOPICS_PER_DOCUMENT=200
MAX_BRAINSTORM_IDEAS=500
DEFAULT_VARIANT_COUNT=10

# Caching
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=1024
ENABLE_CACHE=true

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/pdf_variantes.log

# WebSocket
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=1000

# Export
EXPORT_FORMATS=pdf,docx,txt,html,json,zip,pptx
EXPORT_MAX_SIZE_MB=500
EXPORT_TTL_HOURS=24

# Collaboration
MAX_COLLABORATORS_PER_DOCUMENT=50
COLLABORATION_SESSION_TTL_HOURS=24

# Notifications
ENABLE_NOTIFICATIONS=true
NOTIFICATION_CHANNELS=email,push,in_app

# Analytics
ENABLE_ANALYTICS=true
ANALYTICS_RETENTION_DAYS=90
