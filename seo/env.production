# Configuración de Producción para el Servicio SEO
# IMPORTANTE: Cambiar estos valores en producción

# =============================================================================
# CONFIGURACIÓN DEL SERVIDOR
# =============================================================================
ENVIRONMENT=production
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=false
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/seo-service.log

# =============================================================================
# SEGURIDAD
# =============================================================================
SECRET_KEY=your-super-secret-key-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com
RATE_LIMIT_PER_MINUTE=100

# =============================================================================
# BASE DE DATOS Y CACHE
# =============================================================================
REDIS_URL=redis://redis:6379/0
DATABASE_URL=postgresql://user:password@db:5432/seo_db

# =============================================================================
# MONITOREO Y MÉTRICAS
# =============================================================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
PROMETHEUS_ENABLED=true
HEALTH_CHECK_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=60

# =============================================================================
# RENDIMIENTO
# =============================================================================
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
BATCH_SIZE=20
ENABLE_TRACEMALLOC=true
ENABLE_METRICS=true

# =============================================================================
# CACHE
# =============================================================================
CACHE_TTL=3600
CACHE_MAX_SIZE=2000
ENABLE_REDIS=true

# =============================================================================
# SELENIUM
# =============================================================================
SELENIUM_HEADLESS=true
SELENIUM_TIMEOUT=30
CHROME_DRIVER_PATH=/usr/local/bin/chromedriver
SELENIUM_WINDOW_SIZE=1920,1080
SELENIUM_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# =============================================================================
# IA Y ANÁLISIS
# =============================================================================
OPENAI_API_KEY=your-openai-api-key-here
AI_MODEL=gpt-3.5-turbo
AI_TEMPERATURE=0.1
AI_MAX_RETRIES=3
AI_TIMEOUT=30

# =============================================================================
# OPTIMIZACIONES
# =============================================================================
HTTPX_TIMEOUT=30.0
HTTPX_MAX_KEEPALIVE=20
HTTPX_MAX_CONNECTIONS=100
LXML_ENCODING=utf-8
LXML_REMOVE_BLANK_TEXT=true
ORJSON_OPTION=0
TENACITY_MAX_ATTEMPTS=3
TENACITY_MULTIPLIER=1
TENACITY_MAX_WAIT=10

# =============================================================================
# CIRCUIT BREAKER
# =============================================================================
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60

# =============================================================================
# DOMINIO Y SSL
# =============================================================================
DOMAIN=your-domain.com
SSL_KEYFILE=/etc/nginx/ssl/key.pem
SSL_CERTFILE=/etc/nginx/ssl/cert.pem

# =============================================================================
# GRAFANA
# =============================================================================
GRAFANA_PASSWORD=your-secure-grafana-password

# =============================================================================
# LOGGING AVANZADO
# =============================================================================
LOG_STRUCTURED=true
LOG_JSON=true
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_SEO=INFO

# =============================================================================
# BACKUP Y RECUPERACIÓN
# =============================================================================
BACKUP_ENABLED=true
BACKUP_INTERVAL=24h
BACKUP_RETENTION_DAYS=7

# =============================================================================
# ALERTAS
# =============================================================================
ALERT_EMAIL=admin@your-domain.com
ALERT_WEBHOOK=https://hooks.slack.com/services/your-webhook
ALERT_DISCORD_WEBHOOK=https://discord.com/api/webhooks/your-webhook

# =============================================================================
# DESARROLLO Y DEBUGGING
# =============================================================================
DEBUG=false
PROFILING_ENABLED=false
TRACE_ENABLED=false

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Google Analytics
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX-X

# Google Search Console
GOOGLE_SEARCH_CONSOLE_VERIFICATION=your-verification-code

# Bing Webmaster Tools
BING_WEBMASTER_VERIFICATION=your-verification-code

# =============================================================================
# API RATE LIMITS
# =============================================================================
# OpenAI
OPENAI_RATE_LIMIT_PER_MINUTE=60
OPENAI_RATE_LIMIT_PER_DAY=1000

# External APIs
EXTERNAL_API_RATE_LIMIT_PER_MINUTE=100
EXTERNAL_API_RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# CACHE STRATEGIES
# =============================================================================
CACHE_STRATEGY=redis
CACHE_PREFIX=seo_service
CACHE_COMPRESSION=true
CACHE_ENCRYPTION=false

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1024
WORKER_TIMEOUT=30
WORKER_KEEPALIVE=2

# =============================================================================
# SECURITY HEADERS
# =============================================================================
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=true
XSS_PROTECTION_ENABLED=true

# =============================================================================
# MONITORING ENDPOINTS
# =============================================================================
METRICS_ENDPOINT=/metrics
HEALTH_ENDPOINT=/health
STATUS_ENDPOINT=/status
READINESS_ENDPOINT=/ready
LIVENESS_ENDPOINT=/live

# =============================================================================
# LOG ROTATION
# =============================================================================
LOG_ROTATION_ENABLED=true
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5
LOG_ROTATION_INTERVAL=daily

# =============================================================================
# ERROR HANDLING
# =============================================================================
ERROR_REPORTING_ENABLED=true
ERROR_SAMPLING_RATE=0.1
ERROR_MAX_BREADCRUMBS=100

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_AI_ANALYSIS=true
FEATURE_BATCH_PROCESSING=true
FEATURE_CACHE=true
FEATURE_METRICS=true
FEATURE_HEALTH_CHECKS=true
FEATURE_RATE_LIMITING=true
FEATURE_CIRCUIT_BREAKER=true

# =============================================================================
# DEPLOYMENT
# =============================================================================
DEPLOYMENT_ENVIRONMENT=production
DEPLOYMENT_VERSION=1.0.0
DEPLOYMENT_TIMESTAMP=2024-01-01T00:00:00Z 