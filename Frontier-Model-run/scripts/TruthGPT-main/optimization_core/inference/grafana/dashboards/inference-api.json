{
  "dashboard": {
    "title": "Frontier Inference API - Dashboard",
    "tags": ["inference", "api", "performance"],
    "timezone": "browser",
    "schemaVersion": 36,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(inference_requests_total[5m])",
            "legendFormat": "Requests/sec",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "reqps", "label": "Requests/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 2,
        "title": "Latency (p50, p95, p99)",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(inference_request_duration_ms_bucket[5m])) by (le))",
            "legendFormat": "p50",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(inference_request_duration_ms_bucket[5m])) by (le))",
            "legendFormat": "p95",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(inference_request_duration_ms_bucket[5m])) by (le))",
            "legendFormat": "p99",
            "refId": "C"
          }
        ],
        "yaxes": [
          {"format": "ms", "label": "Latency (ms)"},
          {"format": "short"}
        ]
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 8, "h": 6},
        "targets": [
          {
            "expr": "rate(inference_errors_5xx_total[5m])",
            "legendFormat": "5xx Errors",
            "refId": "A"
          },
          {
            "expr": "rate(inference_errors_4xx_total[5m])",
            "legendFormat": "4xx Errors",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "short"},
          {"format": "short"}
        ]
      },
      {
        "id": 4,
        "title": "Cache Hit Rate",
        "type": "graph",
        "gridPos": {"x": 8, "y": 8, "w": 8, "h": 6},
        "targets": [
          {
            "expr": "rate(inference_cache_hits_total[5m]) / (rate(inference_cache_hits_total[5m]) + rate(inference_cache_misses_total[5m])) * 100",
            "legendFormat": "Hit Rate %",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "percent", "max": 100, "min": 0},
          {"format": "short"}
        ]
      },
      {
        "id": 5,
        "title": "Queue Depth",
        "type": "graph",
        "gridPos": {"x": 16, "y": 8, "w": 8, "h": 6},
        "targets": [
          {
            "expr": "inference_queue_depth",
            "legendFormat": "Queue Depth",
            "refId": "A"
          }
        ],
        "yaxes": [
          {"format": "short"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "System Metrics",
        "type": "graph",
        "gridPos": {"x": 0, "y": 14, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "process_cpu_percent",
            "legendFormat": "CPU %",
            "refId": "A"
          },
          {
            "expr": "process_memory_bytes / 1024 / 1024",
            "legendFormat": "Memory MB",
            "refId": "B"
          }
        ],
        "yaxes": [
          {"format": "percent"},
          {"format": "mbytes"}
        ]
      },
      {
        "id": 7,
        "title": "Circuit Breaker Status",
        "type": "stat",
        "gridPos": {"x": 12, "y": 14, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "circuit_breaker_open_total",
            "legendFormat": "Open Circuits",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto"
        }
      },
      {
        "id": 8,
        "title": "Rate Limit Hits",
        "type": "stat",
        "gridPos": {"x": 18, "y": 14, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "rate(rate_limit_hits_total[5m])",
            "legendFormat": "Rate Limit Hits/sec",
            "refId": "A"
          }
        ],
        "options": {
          "colorMode": "value",
          "graphMode": "area",
          "orientation": "auto"
        }
      },
      {
        "id": 9,
        "title": "Active Batches",
        "type": "stat",
        "gridPos": {"x": 12, "y": 18, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "inference_active_batches",
            "legendFormat": "Active Batches",
            "refId": "A"
          }
        ]
      },
      {
        "id": 10,
        "title": "Tokens per Second",
        "type": "stat",
        "gridPos": {"x": 18, "y": 18, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "inference_tokens_per_second",
            "legendFormat": "Tokens/sec",
            "refId": "A"
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    }
  }
}


