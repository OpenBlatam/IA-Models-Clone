# Bulk TruthGPT System Environment Variables
# ===========================================

# Application Settings
APP_NAME=Bulk TruthGPT System
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8006
WORKERS=1

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/bulk_truthgpt
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_POOL_SIZE=20
REDIS_TIMEOUT=5

# LLM Provider API Keys
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
OPENROUTER_API_KEY=your-openrouter-api-key-here

# TruthGPT Configuration
TRUTHGPT_MAX_KNOWLEDGE_ENTRIES=10
TRUTHGPT_KNOWLEDGE_THRESHOLD=0.7
TRUTHGPT_ENABLE_OPTIMIZATION=true
TRUTHGPT_ENABLE_LEARNING=true

# Generation Settings
MAX_CONCURRENT_TASKS=5
MAX_DOCUMENTS_PER_TASK=1000
TASK_TIMEOUT=3600

# Quality Settings
MIN_QUALITY_SCORE=0.7
ENABLE_CONTENT_VALIDATION=true
ENABLE_TRUTHFULNESS_CHECK=true

# Caching
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
ENABLE_CACHING=true

# Monitoring
ENABLE_METRICS=true
METRICS_INTERVAL=60
ENABLE_HEALTH_CHECKS=true

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/bulk_truthgpt.log

# File Storage
STORAGE_PATH=./storage
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=txt,md,html,json,pdf,docx

# Performance
ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=6
ENABLE_ASYNC_PROCESSING=true

# Optimization
OPTIMIZATION_BATCH_SIZE=10
OPTIMIZATION_PARALLEL_TASKS=3
OPTIMIZATION_TIMEOUT=300

# Cleanup
CLEANUP_INTERVAL=300
OLD_TASK_RETENTION_HOURS=24
ENABLE_AUTO_CLEANUP=true











