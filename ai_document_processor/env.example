# AI Document Processor Environment Configuration

# Application Configuration
APP_NAME="Advanced AI Document Processor"
APP_VERSION="3.0.0"
DEBUG=false
ENVIRONMENT=production

# Server Configuration
HOST=0.0.0.0
PORT=8001
WORKERS=1

# Document Processing Configuration
MAX_FILE_SIZE=104857600  # 100MB in bytes
SUPPORTED_FORMATS=["pdf","docx","doc","txt","rtf","odt","pptx","xlsx","csv"]
MAX_DOCUMENTS_PER_BATCH=50
DOCUMENT_CACHE_TTL=3600

# OCR Configuration
OCR_LANGUAGES=["en","es","fr","de","it","pt"]
OCR_CONFIDENCE_THRESHOLD=0.7
ENABLE_OCR_PREPROCESSING=true

# AI/ML Configuration
MODEL_CACHE_SIZE=10
ENABLE_GPU=false
MODEL_TIMEOUT=60
EMBEDDING_MODEL=all-MiniLM-L6-v2
CLASSIFICATION_MODEL=distilbert-base-uncased
SUMMARIZATION_MODEL=facebook/bart-large-cnn
NER_MODEL=en_core_web_sm

# Document Analysis Configuration
ENABLE_SEMANTIC_SEARCH=true
ENABLE_DOCUMENT_CLASSIFICATION=true
ENABLE_ENTITY_EXTRACTION=true
ENABLE_KEYWORD_EXTRACTION=true
ENABLE_SENTIMENT_ANALYSIS=true
ENABLE_TOPIC_MODELING=true
ENABLE_SUMMARIZATION=true

# Database Configuration
DATABASE_URL=sqlite:///./document_processor.db
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600
MAX_CACHE_SIZE=1000

# Vector Database Configuration
VECTOR_DB_TYPE=chromadb
VECTOR_DB_PATH=./vector_db
VECTOR_DIMENSION=384
SIMILARITY_THRESHOLD=0.8

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256
CORS_ORIGINS=["*"]

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_BURST=20

# Monitoring Configuration
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
ENABLE_METRICS=true
METRICS_PORT=9091
SENTRY_DSN=

# Performance Configuration
REQUEST_TIMEOUT=300
MAX_CONCURRENT_REQUESTS=50
ENABLE_COMPRESSION=true
COMPRESSION_LEVEL=6

# File Storage Configuration
UPLOAD_PATH=./uploads
PROCESSED_PATH=./processed
TEMP_PATH=./temp
MAX_TEMP_FILES=1000
TEMP_FILE_CLEANUP_INTERVAL=3600

# Batch Processing Configuration
ENABLE_BATCH_PROCESSING=true
BATCH_QUEUE_SIZE=1000
BATCH_PROCESSING_INTERVAL=10
MAX_BATCH_SIZE=100

# Export Configuration
ENABLE_EXPORT=true
EXPORT_FORMATS=["json","csv","xlsx","pdf","docx"]
MAX_EXPORT_SIZE=10000

# WebSocket Configuration
ENABLE_WEBSOCKET=true
WEBSOCKET_HEARTBEAT_INTERVAL=30
MAX_WEBSOCKET_CONNECTIONS=100

# Advanced Features
ENABLE_DOCUMENT_COMPARISON=true
ENABLE_PLAGIARISM_DETECTION=true
ENABLE_DOCUMENT_VALIDATION=true
ENABLE_METADATA_EXTRACTION=true
ENABLE_CONTENT_ANALYSIS=true