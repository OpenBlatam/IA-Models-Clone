# Facebook Posts System - Environment Configuration
# Copy this file to .env and configure your settings

# =============================================================================
# API Configuration
# =============================================================================
API_TITLE="Ultimate Facebook Posts API"
API_VERSION="4.0.0"
API_DESCRIPTION="AI-powered Facebook post generation system"
DEBUG=true

# =============================================================================
# Server Configuration
# =============================================================================
HOST=0.0.0.0
PORT=8000
WORKERS=1
MAX_REQUEST_SIZE=10485760

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=sqlite:///./facebook_posts.db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# PostgreSQL Example:
# DATABASE_URL=postgresql://username:password@localhost:5432/facebook_posts

# MySQL Example:
# DATABASE_URL=mysql://username:password@localhost:3306/facebook_posts

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL=redis://localhost:6379
CACHE_DEFAULT_TTL=3600
CACHE_MAX_CONNECTIONS=10

# Redis with Authentication:
# REDIS_URL=redis://username:password@localhost:6379

# Redis with SSL:
# REDIS_URL=rediss://username:password@localhost:6380

# =============================================================================
# AI Service Configuration
# =============================================================================
AI_API_KEY=your_openai_api_key_here
AI_MODEL=gpt-3.5-turbo
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7
AI_TIMEOUT=30

# OpenAI Models:
# AI_MODEL=gpt-3.5-turbo
# AI_MODEL=gpt-4
# AI_MODEL=gpt-4-turbo-preview

# =============================================================================
# Analytics Configuration
# =============================================================================
ANALYTICS_API_KEY=your_analytics_api_key_here
ANALYTICS_ENDPOINT=https://api.analytics.example.com
ANALYTICS_TIMEOUT=10

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
LOG_FILE=logs/facebook_posts.log

# Log Levels: DEBUG, INFO, WARNING, ERROR, CRITICAL

# =============================================================================
# Performance Configuration
# =============================================================================
MAX_CONCURRENT_REQUESTS=1000
REQUEST_TIMEOUT=30
BACKGROUND_TASK_TIMEOUT=300

# =============================================================================
# Security Configuration
# =============================================================================
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=*
API_KEY=your_secure_api_key_here

# CORS Examples:
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
# CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
# CORS_HEADERS=Authorization,Content-Type,X-Requested-With

# =============================================================================
# Engine Configuration
# =============================================================================
ENABLE_CACHING=true
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true

# =============================================================================
# Development Configuration
# =============================================================================
# Uncomment for development
# DEBUG=true
# LOG_LEVEL=DEBUG
# ENABLE_CACHING=false

# =============================================================================
# Production Configuration
# =============================================================================
# Uncomment for production
# DEBUG=false
# LOG_LEVEL=INFO
# WORKERS=4
# ENABLE_CACHING=true
# ENABLE_METRICS=true

# =============================================================================
# Monitoring Configuration
# =============================================================================
# Prometheus metrics endpoint
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Health check endpoint
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# Feature Flags
# =============================================================================
# Enable/disable specific features
FEATURE_BATCH_PROCESSING=true
FEATURE_ANALYTICS=true
FEATURE_OPTIMIZATION=true
FEATURE_CACHING=true
FEATURE_METRICS=true

# =============================================================================
# External Services
# =============================================================================
# Facebook API (if integrating with Facebook)
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token

# Twitter API (if integrating with Twitter)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret

# LinkedIn API (if integrating with LinkedIn)
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token

# =============================================================================
# Advanced Configuration
# =============================================================================
# Custom AI prompts
CUSTOM_PROMPT_TEMPLATE="Generate a {content_type} Facebook post about '{topic}' for {audience_type} audience in {tone} tone, maximum {max_length} characters in {language}."

# Content validation rules
MIN_CONTENT_LENGTH=10
MAX_CONTENT_LENGTH=2000
REQUIRED_HASHTAGS=false
MAX_HASHTAGS=5

# Performance tuning
ASYNC_WORKERS=4
BATCH_SIZE=10
CACHE_TTL=3600
SESSION_TIMEOUT=1800

# =============================================================================
# Backup Configuration
# =============================================================================
BACKUP_ENABLED=false
BACKUP_INTERVAL=24
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# =============================================================================
# Notifications
# =============================================================================
NOTIFICATION_EMAIL=admin@example.com
NOTIFICATION_SLACK_WEBHOOK=https://hooks.slack.com/services/...
NOTIFICATION_DISCORD_WEBHOOK=https://discord.com/api/webhooks/...

# =============================================================================
# Testing Configuration
# =============================================================================
# Test database
TEST_DATABASE_URL=sqlite:///./test_facebook_posts.db

# Test API key
TEST_API_KEY=test_api_key_123

# Mock services for testing
MOCK_AI_SERVICE=false
MOCK_ANALYTICS_SERVICE=false
MOCK_CACHE_SERVICE=false