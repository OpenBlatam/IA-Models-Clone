# Application Configuration
APP_NAME="Ultra Modular AI History Comparison"
APP_VERSION="8.0.0"
DEBUG=true
ENVIRONMENT=development

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=*

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./app.db
DATABASE_ECHO=false

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# Plugin System Configuration
PLUGIN_DIRECTORY=plugins
PLUGIN_TIMEOUT=30
MAX_CONCURRENT_PLUGINS=10

# Extension System Configuration
EXTENSION_TIMEOUT=10
MAX_EXTENSIONS_PER_POINT=100

# Middleware Configuration
MIDDLEWARE_TIMEOUT=5
MAX_MIDDLEWARE_PER_PIPELINE=50

# Event System Configuration
EVENT_BUS_WORKERS=10
EVENT_QUEUE_SIZE=1000

# Workflow System Configuration
WORKFLOW_TIMEOUT=3600
MAX_WORKFLOW_INSTANCES=100

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json




