# Application Configuration
ENVIRONMENT=development
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000

# Database Configuration
DATABASE_URL=sqlite:///./ai_history.db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ECHO=false
DB_ECHO_POOL=false

# Security Configuration
SECURITY_API_KEY=your-api-key-here
SECURITY_SECRET_KEY=your-secret-key-here
SECURITY_ALGORITHM=HS256
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=30
SECURITY_ENABLE_AUTH=false
SECURITY_ENABLE_RATE_LIMITING=true
SECURITY_REQUESTS_PER_MINUTE=100

# Logging Configuration
LOGGING_LEVEL=INFO
LOGGING_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOGGING_FILE_PATH=logs/app.log
LOGGING_MAX_FILE_SIZE=10485760
LOGGING_BACKUP_COUNT=5
LOGGING_ENABLE_CONSOLE=true
LOGGING_ENABLE_FILE=false

# Cache Configuration
CACHE_ENABLE=true
CACHE_TTL=300
CACHE_SIZE=1000
CACHE_REDIS_URL=redis://localhost:6379/0

# Analysis Configuration
ANALYSIS_QUALITY_THRESHOLD=0.7
ANALYSIS_TREND_WINDOW_DAYS=30
ANALYSIS_COMPARISON_MIN_SAMPLES=10
ANALYSIS_ANOMALY_SIGMA=2.0
ANALYSIS_FORECAST_DAYS=7
ANALYSIS_CONFIDENCE_THRESHOLD=0.7

# Notification Configuration
NOTIFICATION_ENABLE=false
NOTIFICATION_EMAIL_ENABLED=false
NOTIFICATION_SMTP_HOST=smtp.gmail.com
NOTIFICATION_SMTP_PORT=587
NOTIFICATION_SMTP_USERNAME=your-email@gmail.com
NOTIFICATION_SMTP_PASSWORD=your-app-password
NOTIFICATION_WEBHOOK_ENABLED=false
NOTIFICATION_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url

# CORS Configuration
API_CORS_ORIGINS=*
API_TRUSTED_HOSTS=*

# Production Database (uncomment for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/ai_history

# Redis Configuration (uncomment if using Redis)
# REDIS_URL=redis://localhost:6379/0

# External API Keys (uncomment if using external services)
# OPENAI_API_KEY=your-openai-api-key
# ANTHROPIC_API_KEY=your-anthropic-api-key
# GOOGLE_API_KEY=your-google-api-key




